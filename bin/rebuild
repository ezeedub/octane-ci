#!/usr/bin/env bash
# Rebuild the site and theme.  Used after doing "git pull" as part of
# daily workflow.
# Runs in the Build container, so all tools are available.
#: exec_target = cli

# Build composer, build theme, etc.
bin/build
retVal=$?
if [ $retVal -ne 0 ]; then
  # Exit if build failed.
  exit $retVal
fi

# Run updates, clear cache, etc.
bin/import
retVal=$?
if [ $retVal -ne 0 ]; then
  # Exit if import/install failed.
  exit $retVal
fi
